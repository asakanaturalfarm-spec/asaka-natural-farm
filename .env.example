# 環境変数テンプレート
# .env ファイルにコピーして使用してください

# ━━━━━━━━━━━━━━━━━━━━━━━━
# メールサービス設定
# ━━━━━━━━━━━━━━━━━━━━━━━━

# メールサービスプロバイダー（sendgrid または ses）
EMAIL_SERVICE=sendgrid

# 送信元メールアドレス
EMAIL_FROM=order@asakanatural.jp

# ドメイン（メール内のリンクに使用）
DOMAIN=https://asakanatural.jp/store

# 環境（test / production）
NODE_ENV=production


# ━━━━━━━━━━━━━━━━━━━━━━━━
# SendGrid設定
# ━━━━━━━━━━━━━━━━━━━━━━━━

# SendGrid APIキー（SG.から始まる）
SENDGRID_API_KEY=SG.your_api_key_here


# ━━━━━━━━━━━━━━━━━━━━━━━━
# Amazon SES設定（SendGridの代わりに使用する場合）
# ━━━━━━━━━━━━━━━━━━━━━━━━

# AWSリージョン（例: ap-northeast-1 = 東京）
AWS_REGION=ap-northeast-1

# AWS認証情報
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here


# ━━━━━━━━━━━━━━━━━━━━━━━━
# セキュリティ注意事項
# ━━━━━━━━━━━━━━━━━━━━━━━━

# ⚠️ このファイルを公開リポジトリにコミットしないこと
# ⚠️ .gitignore に .env を追加すること
# ⚠️ 本番環境では環境変数を直接設定すること（Vercel/Netlify/AWS等）
